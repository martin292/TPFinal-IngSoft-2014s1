<div class="well">
  <form class="centered">
    <h1>Detalles del evento</h1>
    <p>Nombre: <%= @event.name %></p>
    <p>Cantidad de participantes: <%= @event.max %></p>
    <p>Fecha: <%= @event.date.to_date.to_s %></p>
    <p>Tag: <%= @event.tag %></p>
    <p>Identificador: <%= @event.slug %></p>
    <p>Participantes: <%= @event.members %></p>
    <p>Link corto: <a href="<%= @event.short_url %>"><%= @event.short_url %></a>
  </form>
</div>
