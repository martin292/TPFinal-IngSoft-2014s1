<div class="well">
  <form class="centered">
    <h1>Evaluaci√≥n de evento</h1>
    <p>Nombre: <%= @event.name %></p>
    <p>Fecha: <%= @event.date.to_date.to_s %></p>

    <table class="table table-bordered table-striped table-hover table-centered-columns">
        <thead>
            <tr>
                <th>Positivo</th>
                <th>Neutro</th>
                <th>Negativo</th>
            </tr>
        </thead>    
        <tbody>
            <tr>
                <td><%= @event.positive_ratings_count%></td>
                <td ><%= @event.neutral_ratings_count%></td>
                <td><%= @event.negative_ratings_count%></td>
            </tr>
            <tr>
                <td class="table-footer" colspan="3">Total de evaluaciones: <%= @event.ratings.size %></td>
            </tr>
            <tr>
                <td class="table-footer" colspan="3">Promedio de evaluaciones: <%= @event.average_ratings %></td>
            </tr>
        </tbody>
    </table>
  </form>
  <div class="pull-right">
    <a href="/events/<%= @event.slug %>/comments">ver comentarios</a>
  </div>
</div>

<% content_for :additional_js do %>
    <%= javascript_include_tag 'rate.js' %>
<% end %>


    
